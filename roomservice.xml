<?xml version="1.0" encoding="UTF-8"?>
<manifest>

    <remote  name="lineage"
           fetch="https://github.com/LineageOS/" />

    <remote  name="gfour"
           fetch="ssh://git@github.com/LGgFour/"
           revision="lineage-19.1" />
  
    <remote name="sfX" 
            fetch="https://github.com/sfX-Android/" />
    
    <remote name="los-op2"
            fetch="https://github.com/LineageOS-OP2/" />

